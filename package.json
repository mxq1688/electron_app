{
  "name": "electron_app",
  "productName": "electron_app",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "package-mac": "electron-forge package --arch x64 --platform darwin",
    "package-win": "electron-forge package --arch x64 --platform win32",
    "make": "electron-forge make",
    "make-mac": "electron-forge make --arch x64 --platform darwin",
    "make-win": "electron-forge make --arch x64 --platform win32",
    "forge-publish": "electron-forge publish",

    "start2": "electron .",
    "packager-win": "electron-packager . aiask --platform=win32 --arch=x64  --asar  --out=packager --overwrite --no-package-manager --ignore='(.git)' --icon=assets/icons/laihua/logo --version-string.ProductName='奇妙问'",
    "packager-linux": "electron-packager . aiask --platform=linux --arch=x64  --asar  --out=packager --overwrite --no-package-manager --ignore='(.git)' --icon=assets/icons/laihua/logo -no-sandbox",
    "packager-mac": "electron-packager . aiask --platform=darwin --arch=x64  --asar  --out=packager --overwrite --no-package-manager --ignore='(.git)' --icon=assets/icons/laihua/logo",
    "create-installer-mac": "electron-installer-dmg ./packager/aiask-darwin-x64/aiask.app aiask --out=./packager/dmg",
    "packager-appdmg": "appdmg appdmg.json packager/aiask.dmg",
    
    "build-w": "electron-builder --config=./electron-builder.js -w=nsis --x64 --publish always",
    "build-w-32": "electron-builder --config=./electron-builder.js -w=nsis --ia32",
    "build-w-64": "electron-builder --config=./electron-builder.js -w=nsis --x64",
    "build-w-arm64": "electron-builder --config=./electron-builder.js -w=nsis --arm64",
    "build-we": "electron-builder --config=./electron-builder.js -w=portable --x64",
    "build-wz": "electron-builder --config=./electron-builder.js -w=7z --x64",
    "build-wz-32": "electron-builder --config=./electron-builder.js -w=7z --ia32",
    "build-wz-64": "electron-builder --config=./electron-builder.js -w=7z --x64",
    "build-wz-arm64": "electron-builder --config=./electron-builder.js -w=7z --arm64",
    "build-m": "electron-builder --config=./electron-builder.js -m",
    "build-m-arm64": "electron-builder --config=./electron-builder.js -m --arm64",
    "build-l": "electron-builder --config=./electron-builder.js -l=deb --x64",
    "build-l-32": "electron-builder --config=./electron-builder.js -l=deb --ia32",
    "build-l-64": "electron-builder --config=./electron-builder.js -l=deb --x64",
    "build-l-arm64": "electron-builder --config=./electron-builder.js -l=deb --arm64",
    "build-l-armv7l": "electron-builder --config=./electron-builder.js -l=deb --armv7l",
    "build-lr-64": "electron-builder --config=./electron-builder.js -l=rpm --x64",
    "build-lp-64": "electron-builder --config=./electron-builder.js -l=pacman --x64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@electron/packager": "^18.3.4",
    "electron": "32.0.1",
    "electron-builder": "^24.13.3",
    "electron-installer-dmg": "^4.0.0"
  },
  "keywords": [],
  "author": {
    "name": "xianqiang.meng",
    "email": "xianqiang.meng@mobvoi.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "update-electron-app": "^3.0.0"
  }
}
